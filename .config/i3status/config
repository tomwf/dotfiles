# https://man.archlinux.org/man/i3status.1

general {
        interval = 5
}

order += "volume master"
order += "wireless wlp3s0"
order += "battery 0"
order += "cpu_temperature 0"
order += "cpu_usage"
order += "memory"
order += "tztime local"

volume master {
        format = "Volume: %volume"
}

wireless wlp3s0 {
        format_up = "%essid"
        format_down = "Disconnected"
}

battery 0 {
        format = "BAT: %percentage"
        low_threshold = 10
}

cpu_temperature 0 {
        format = "T: %degrees °C"
}

cpu_usage {
        format = "CPU: %usage"
}

memory {
        format = "RAM: %percentage_used"
        threshold_degraded = "10%"
}

tztime local {
        format = "%a %d %b à %H:%M"
}
