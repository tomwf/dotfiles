client.background        $base

# Remap keys
# Swap Ctrl and Caps Lock keys
exec --no-startup-id /bin/bash -c "sleep 5 && setxkbmap -rules evdev -model pc105 -layout fr -variant mac -option ctrl:swapcaps"
# # Swap "<" and "@"
exec --no-startup-id /bin/bash -c "sleep 5 && xmodmap -e 'keycode 49 = less greater less greater VoidSymbol VoidSymbol VoidSymbol'"
exec --no-startup-id /bin/bash -c "sleep 5 && xmodmap -e 'keycode 94 = at numbersign at numbersign periodcentered Ydiaeresis periodcentered'"
